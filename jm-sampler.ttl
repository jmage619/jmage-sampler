@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix urid:  <http://lv2plug.in/ns/ext/urid#> .
@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix ui:   <http://lv2plug.in/ns/extensions/ui#> .
@prefix exui: <http://kxstudio.sf.net/ns/lv2ext/external-ui#> .
@prefix work:  <http://lv2plug.in/ns/ext/worker#> .
@prefix state: <http://lv2plug.in/ns/ext/state#> .
@prefix opts: <http://lv2plug.in/ns/ext/options#> .
@prefix bufsz: <http://lv2plug.in/ns/ext/buf-size#> .
@prefix rsz:  <http://lv2plug.in/ns/ext/resize-port#> .

<https://github.com/jmage619/jmage-sampler>
	a lv2:Plugin;
  doap:name "JMAGE Sampler" ;
  doap:license <http://opensource.org/licenses/isc> ;
	lv2:requiredFeature urid:map ,
    opts:options,
    work:schedule ;
  opts:requiredOption bufsz:maxBlockLength ;
  opts:supportedOption bufsz:nominalBlockLength ;
  lv2:extensionData work:interface ,
    state:interface ;
	ui:ui <https://github.com/jmage619/jmage-sampler#ui> ;
	lv2:port [
		a lv2:InputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		lv2:designation lv2:control ;
		atom:supports <http://lv2plug.in/ns/ext/midi#MidiEvent> ,
			atom:Object ;
		lv2:index 0 ;
		lv2:symbol "control" ;
		lv2:name "Control"
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 1 ;
		lv2:symbol "volume" ;
		lv2:name "Volume" ;
		lv2:default 16.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 16.0
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "channel" ;
		lv2:name "Channel" ;
		lv2:default 0.0 ;
		lv2:minimum 0.0 ;
		lv2:maximum 15.0
	] , [
		a lv2:OutputPort ,
			atom:AtomPort ;
		atom:bufferType atom:Sequence ;
		atom:supports atom:Object ;
		lv2:designation lv2:control ;
    rsz:minimumSize 20480 ;
		lv2:index 3 ;
		lv2:symbol "notify" ;
		lv2:name "Notify"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 4 ;
		lv2:symbol "out1" ;
		lv2:name "Out L"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 5 ;
		lv2:symbol "out2" ;
		lv2:name "Out R"
	] .

<https://github.com/jmage619/jmage-sampler#ui>
	a ui:UI ;
	lv2:requiredFeature urid:map ,
    ui:idleInterace ,
    ui:showInterface ;
  lv2:extensionData ui:idleInterface ,
    ui:showInterface ;
	ui:portNotification [
		ui:plugin <https://github.com/jmage619/jmage-sampler> ;
		lv2:symbol "notify" ;
		ui:notifyType atom:Object
	] , [
		ui:plugin <https://github.com/jmage619/jmage-samplerr> ;
		lv2:symbol "volume" ;
		ui:portProtocol ui:floatProtocol
	] , [
		ui:plugin <https://github.com/jmage619/jmage-sampler> ;
		lv2:symbol "channel" ;
		ui:portProtocol ui:floatProtocol
  ] .
